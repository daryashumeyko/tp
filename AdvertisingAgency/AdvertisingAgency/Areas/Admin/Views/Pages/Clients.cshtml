@model IEnumerable <AdvertisingAgency.Models.ViewModels.Account.UserVM>

@{
    ViewBag.Title = "Clients";
}

<h2>Clients</h2>

<table class="table">
    <tr>
        <th>
            Имя
        </th>
        <th>
            Фамилия
        </th>
        <th>
            Почтовый адрес
        </th>
        <th>
            Логин
        </th>
        <th></th>
    </tr>

    <!--Метод вывода клиентов-->
    @foreach (var client in Model)
    {
    <tr>
        <td>
            @client.FirstName
        </td>
        <td>
            @client.LastName
        </td>
        <td>
            @client.EmailAdress
        </td>
        <td>
            @client.Username
        </td>
    </tr>
    }
</table>