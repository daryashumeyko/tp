@model IEnumerable<AdvertisingAgency.Models.ViewModels.Pages.PageVM>

@{
    ViewBag.Title = "Pages";
}

<h2>Страницы</h2>

@if (TempData["M"] != null) 
{
    <div class="alert alert-success">
        @TempData["M"]
    </div>
}

<p>
    @Html.ActionLink("Создать новую страницу", "Add Page", "", new { @class = "btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Slug
        </th>
        <th>
            Sidebar
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasSidebar)
        </td>
        <td>
            @Html.ActionLink("Редактировать страницу", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Просмотреть страницу", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить страницу", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
